{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "esnext",
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "strict": true,
        // "noUncheckedIndexedAccess": true,
        "moduleResolution": "Bundler",
        "module": "NodeNext",
        "outDir": "dist",
        "lib": [
            "es2022",
            "dom",
            "dom.iterable"
        ]
    }
}
